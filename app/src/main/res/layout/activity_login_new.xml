<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/rdx_login_background"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/rdx_logo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="start"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/rdxshop_logo"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#e8ffffff"
            android:layout_marginLeft="30dp"
            android:text="@string/signin_here"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <EditText
        android:id="@+id/et_enter_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:paddingBottom="20dp"
        android:ems="3"
        android:textColorHint="#C5FFFFFF"
        android:textSize="15sp"
        android:hint="@string/enter_your_email"
        android:inputType="textPersonName"
        android:autofillHints="" />

        <EditText
        android:id="@+id/et_enter_password"
        android:layout_width="match_parent"
            android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:paddingBottom="20dp"
        android:ems="3"
        android:textSize="15sp"
            android:textColorHint="#c5ffffff"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:autofillHints="" />
    </LinearLayout>
    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/submit_button"
        android:text="@string/sign_in"
        android:textColor="#e53935"
        />
    <TextView
        android:id="@+id/textView_or_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:text="@string/or_social"
        android:textColor="@android:color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:isDarkTheme="false"
            android:text="@string/bt_google_signin"
            />

        <com.facebook.login.widget.LoginButton
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            facebook:com_facebook_login_text="@string/bt_facebook_signin"
            android:id="@+id/login_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textSize="12sp"
            android:paddingTop="13dp"
            android:paddingBottom="14dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textAllCaps="false"
        android:text="@string/sign_up"
        android:textColor="@android:color/white"
        />
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/textView_guest_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:text="@string/bt_continue_as_guest"
        android:textColor="@android:color/white"
        />
    </LinearLayout>

</LinearLayout>
